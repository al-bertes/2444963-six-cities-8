{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "The project 'Six Cities' from HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.8.0",
    "chalk": "^5.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "got": "^14.4.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "joi": "^17.13.3",
    "jose": "^5.9.6",
    "mime-types": "^2.1.35",
    "mongodb": "^6.9.0",
    "mongoose": "^8.7.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.7.0"
  }
}
